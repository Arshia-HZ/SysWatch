@model IEnumerable<SysWatch.Models.Device>

@{
    ViewData["Title"] = "Index";
}

<h1>Devices</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr class="col-md-12"> 
            <th scope="col" class="col-md-1 text-center text-wrap">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col" class="col-md-2 text-center text-wrap">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th scope="col" class="col-md-1 text-center text-wrap">
                @Html.DisplayNameFor(model => model.LinuxDistro)
            </th>
            <th scope="col" class="col-md-2 text-center text-wrap">
                @Html.DisplayNameFor(model => model.Cpu)
            </th>
            <th scope="col" class="col-md-1 text-center text-wrap">
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th scope="col" class="col-md-1 text-center text-wrap">
                @Html.DisplayNameFor(model => model.DiskUsage)
            </th>
            <th scope="col" class="col-md-1 text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-md-1 text-center" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="col-md-2 text-center" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td class="col-md-1 text-center" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.LinuxDistro)
            </td>
            <td class="col-md-2 text-center" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.Cpu)
            </td>
            <td class="col-md-1 text-center text-wrap" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td class="col-md-1 text-center" style="overflow-wrap:anywhere">
                @Html.DisplayFor(modelItem => item.DiskUsage)
            </td>
            <td class="col-md-1 text-center" style="overflow-wrap:anywhere">

                    <a style="color:inherit;text-decoration:none" asp-action="Edit"
                       asp-route-id="@item.Id">
